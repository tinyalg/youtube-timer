{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "0.5",
  "author": "Tinyalg Systems",
  "homepage_url": "https://github.com/tinyalg/youtube-timer",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "action": {
    "default_title": "__MSG_appName__",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-timer-firefox-addons@tinyalg.be",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  }
}